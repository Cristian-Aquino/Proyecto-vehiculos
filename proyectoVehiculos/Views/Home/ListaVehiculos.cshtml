
@{
    ViewBag.Title = "ListaVehiculos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listado de vehiculos</h2>

<table id="tabla_vehiculos" class="display cell-border" style="width: 100%">
    <thead>
        <tr>
            <th>Patente/Placa</th>
            <th>Titular</th>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Cantidad de puertas</th>

        </tr>
    </thead>
    <tbody>

    </tbody>
</table>

@section scripts{
    <script>

        var tabladata;


        jQuery.ajax({
            url: '@Url.Action("ListadoVehiculos", "Home")',
            type: "GET",
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                console.log(data);
            }
        })

        tabladata = $("#tabla_vehiculos").DataTable({
            responsive: true,
            ordering: false,
            "ajax": {
               url: '@Url.Action("ListadoVehiculos", "Home")',
                type: "GET",
                dataType: "json"
            },
            "columns": [
                { "data": "Patente" },
                { "data": "Nombre_titular" },
                { "data": "Marca" },
                { "data": "Modelo" },
                { "data": "Cant_puertas" }
            ],
            "languaje": {
                "url": "https://cdn.datatables.net/plug-ins/1.11.3/i18n/es_es.json"
            }

        });


    </script> 
   }